proc P(string s):
    int c;
    while c < 10:
        writeln("%s", s);
        delay 1;
        c = c + 1
    end
end

proc NL():
    int c;
    delay 0.5;
    while c < 9:
        writeln("");
        delay 1;
        c = c + 1
    end
end

model M():
    run P("A"), P("B"), P("C"), NL()
end

xper X():
    int m1 = M(1);
    int m2 = M(2);
    writeln("Total: %d", m1 + m2);
end

model int M(int n):
    run P(n);
end

proc int P(int n):
    chan void a;

    delay 5.3 + n;
    writeln("Time: %.1f", time);
    if n == 1: exit n + 1; end
    a!
end

model M():
    timer t;
    real v;

    t = timer(28.0 + sin(1.0));
    v = real(t);
    writeln("%f\n", v);

    delay 3.5;
    writeln("%s\n\n", real(t));

    select ready(t): pass end
    writeln("%s:", time);

    t = timer(v);
    writeln("%s: %s", time, ready(t));

    delay real(t);
    writeln("%s: %s", time, ready(t));
end

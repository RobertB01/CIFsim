    c?x;
end

# Send channel with data
proc D2a(chan! int c):
    c!1
end

proc D2b(chan! int c):
    c!
end

proc D2c(chan! int c):
    c?1
end

proc D2d(chan! int c):
    c?
end

proc D2e(chan! int c):

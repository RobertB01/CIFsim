proc P(chan void c):
    c!;
end

model M():
    list(3) chan void xs;

    start
        unwind i,c in enumerate(xs):
            P(c)
        end;

    select
        unwind i in range(3), j in range(i):
            xs[j]?
        end
    end;

    delay 5.0;

    select
        unwind i in range(3):
            unwind j in range(i):
                xs[j]?
            end
        end
    end
end

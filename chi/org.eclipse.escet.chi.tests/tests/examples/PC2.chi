proc P(chan! int a):
    a!5
end

proc C(chan? int a):
    int x;
    while true:
        delay 5.0;
        a?x;
        write("%g\n", time);
        write("%s", x);
        write("\n")
    end
    writeln("%g\t%d\n", time, x) # Never executed!
end

model M():
    chan int a;
    run
        P(a), C(a)
end

@doc($text="a")
input bool x;

automaton a1:
  @doc($text="a")
  location:
    initial;
end

automaton a2:
  @doc($text="a")
  location:
    initial;
    marked x;
end

automaton a3:
  @doc($text="a")
  location loc1:
    initial;

  @doc($text="a")
  location loc2:
    initial;
    marked x;
end

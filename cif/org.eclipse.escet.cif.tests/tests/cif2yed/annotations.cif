@@doc("first\nwith multiple lines")
@@doc("second")

@doc("a")
input bool x;

@doc("a1")
automaton a1:
  @doc("a")
  location:
    initial;

    @@doc("edge")
    edge tau;
end

automaton a2:
  @doc("a")
  location:
    initial;
    marked x;
end

automaton a3:
  @doc("a")
  location loc1:
    initial;

  @doc("a")
  location loc2:
    initial;
    marked x;
end

@doc("a4")
automaton a4:
  location:
    initial;
end

@doc("g1")
group g1:
end

@doc("A")
automaton def A(
  @doc("p")
  alg int p
):
  location:
    initial p > 0;
end

@doc("G")
group def G():
end

@doc("ainst1")
ainst1: A(1);

@doc("ainst2")
ainst2: A(2);

@doc("ginst1")
ginst1: G();

@doc("ginst2")
ginst2: G();

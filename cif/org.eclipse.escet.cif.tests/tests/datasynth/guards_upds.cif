controllable a, b;

plant p1:
  disc int[0..5] x;

  location l0:
    initial;
    marked;
    edge a do x := x + 1 goto l1;
    edge b when x >= 3;

  location l1;
end

plant p2:
  disc int[0..5] y;

  location:
    initial;
    marked;
    edge a when y > 2 do y := 3;
    edge b when p1.x != 4;
end

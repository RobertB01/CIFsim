controllable c1, c2;

plant p1:
  disc int[0..5] x;

  location l0:
    initial;
    marked;
    edge c1 goto l1;

  location l1:
    edge c1 goto l2;

  location l2:
    marked x > 0;
    edge c1 goto l3;

  location l3;
end

plant p2:
  location l0:
    initial;
    marked;
    edge c1 goto l1;

  location l1:
    marked;
    edge c1 goto l2;

  location l2:
    marked p1.x <= 3;
    edge c2 goto l3;

  location l3:
    marked p1.x != 4;
    edge c1 goto l4;

  location l4;
end

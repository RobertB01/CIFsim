plant p:
  disc int[0..3] x;
  controllable inc, dec;

  location:
    initial;
    marked;
    edge inc do x := x + 1;
    edge dec do x := x - 1;
end

requirement r:
  controllable trace;

  location loc1:
    initial;
    marked;

    edge trace goto loc2;

  location loc2:
    edge trace when p.x >= 2 goto loc1;
end

requirement p.inc needs r.loc1;

requirement invariant p.x != 1;

plant p:
  disc int[0..3] x in any;

  requirement invariant x != 2;

  location l1:
    initial;
    marked;
    requirement invariant x != 0;

  location l2:
    initial;
    marked;
    requirement invariant x != 3;
end

controllable a, b, c;

plant p:
  disc int[0..10] x = 5;
  disc int[0..10] y = 12 - 6;

  location:
    initial;
    marked;
    edge a do x := x + 1;
    edge b do x := x - 1, y := y + 1;
    edge c do y := y - 1;
end

requirement invariant p.x <= 8, p.y != 7;

requirement r:
  requirement invariant p.x >= 2;

  location:
    initial;
    marked;
end

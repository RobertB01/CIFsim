controllable a, b, c, d, e;

plant p:
  disc int[0..7] x = 3;
  disc int[0..7] y = 6;

  location:
    initial;
    marked;
    edge a, b, c, d, e do x := x + 1, y := y - 1;
end

requirement r:
  alphabet d;

  location:
    initial;
    marked;
end

requirement a needs p.x >= 4;
requirement a needs p.x <= 5;
requirement b needs p.y > 5;
requirement c needs p.y != 5;

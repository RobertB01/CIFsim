initial p.x != 1;

plant p:
  disc int[0..3] x in any;

  initial x != 2;

  location l1:
    initial x != 0; // Can only start here if x = 3.
    marked;

  location l2:
    initial x != 3; // Can only start here if x = 0.
    marked;
end

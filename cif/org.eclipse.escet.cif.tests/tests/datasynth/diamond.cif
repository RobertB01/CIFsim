plant motor1:
  controllable c_on, c_off;

  location Off:
    initial;
    marked;
    edge c_on goto On;

  location On:
    edge c_off goto Off;
end

plant motor2:
  controllable c_on, c_off;

  location Off:
    edge c_on goto On;

  location On:
    initial;
    marked;
    edge c_off goto Off;
end

requirement order:
  location l1:
    initial;
    marked;
    edge motor1.c_on goto l2;

  location l2:
    edge motor2.c_off goto l3;

  location l3:
    edge motor2.c_on goto l4;

  location l4:
    edge motor1.c_off goto l1;
end

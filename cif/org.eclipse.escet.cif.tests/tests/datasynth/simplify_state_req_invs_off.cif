// State requirement invariants.
controllable e;

plant p:
  disc int[0..5] x in any;

  location loc1:
    initial;
    marked;
    edge e goto loc2;

  location loc2:
    requirement x > 3;

    edge e goto loc1;
end

requirement p.loc1 => p.x > 2;

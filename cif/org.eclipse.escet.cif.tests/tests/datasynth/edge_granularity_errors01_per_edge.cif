uncontrollable e;

plant p:
  disc int[0..7] x in any;

  location l1:
    initial;

    // Overflow, two directions.
    edge e do x := x + 1 goto l2;
    edge e do x := x - 1 goto l2;

  location l2:
    marked;
end

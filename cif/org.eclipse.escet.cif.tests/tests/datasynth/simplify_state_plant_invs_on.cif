// State plant invariants.
controllable e3a;

plant p3:
  disc int[0..5] x in any;

  location loc1:
    initial;
    marked;
    edge e3a goto loc2;

  location loc2:
    plant x > 3;

    edge e3a goto loc1;
end

plant p3.loc1 => p3.x > 2;

uncontrollable e;

plant p:
  disc int[0..3] x in any;
  disc int[0..3] y in any;

  location l1: // x = 0, y in any
    initial;

    // Same guards, same updates.
    edge e when x = 0 do y := 2 goto y2;
    edge e when x = 0 do y := 2 goto y2;

  location y2: // x = 0, y = 2
    marked y = 2;
end

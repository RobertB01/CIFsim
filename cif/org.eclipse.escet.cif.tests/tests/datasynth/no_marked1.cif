controllable c;

plant p1:
  disc int[0..5] x;

  marked x > 2, x < 2;

  location l0:
    initial;
    marked;
    edge c goto l1;

  location l1:
    edge c goto l0;
end

plant p2:
  location l0:
    initial;
    edge c goto l1;

  location l1:
    marked;
    edge c goto l0;
end

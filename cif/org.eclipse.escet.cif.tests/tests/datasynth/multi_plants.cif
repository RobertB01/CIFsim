controllable a, b, c;

plant p1:
  disc int[0..5] x;

  location l0:
    initial;
    marked;
    edge a goto l1;

  location l1:
    edge b do x := x + 1 goto l0;
end

plant p2:
  location l0:
    initial;
    marked;
    edge a when p1.x = 1 goto l1;
    edge a when p1.x != 1 goto l2;

  location l1:
    edge c goto l2;

  location l2:
    edge b goto l0;
end

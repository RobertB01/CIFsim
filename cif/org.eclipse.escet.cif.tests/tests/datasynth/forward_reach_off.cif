controllable e, f, g;

plant p:
  disc int[0..5] v = 3;
  disc int[0..5] w in any;

  location:
    initial;
    marked;

    edge e when v = 1;
    edge e when v = 2;
    edge e when v = 3;
    edge e when v = 4;

    edge f when v = 1 do v := v + 1;
    edge f when v = 2 do v := v - 1;
    edge f when v = 3 do v := v - 1;
    edge f when v = 4 do v := v + 1;

    edge g when v = 2 do v := w;
end

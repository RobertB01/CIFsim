// Uncontrollable event propagation.

controllable p_a;
uncontrollable p_b;

plant p:
  disc int[0..5] x in any;

  location loc1:
    initial;
    marked;
    edge p_a when x >= 3 goto loc2;

  location loc2:
    marked;
    edge p_b goto loc3;

  location loc3;
end

// Marking propagation.

controllable q_a, q_b;

plant q:
  location loc1:
    initial;
    marked;
    edge q_a goto loc2;
    edge q_b goto loc2;

  location loc2:
    edge q_a goto loc3;

  location loc3:
    edge q_b goto loc4;

  location loc4:
    edge q_a goto loc1;
    edge q_b goto loc5;

  location loc5:
    edge q_a goto loc6;

  location loc6:
    edge q_b goto loc7;

  location loc7;
end

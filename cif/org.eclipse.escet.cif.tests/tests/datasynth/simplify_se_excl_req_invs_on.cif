controllable c_a, c_b, c_c, c_d;

plant p:
  disc int[0..5] x in any;

  location:
    initial;
    marked;

    edge c_a do x := x + 1;
    edge c_b when x = 3 or x = 5;
    edge c_c when x >= 2;
    edge c_d when x >= 3;
end

requirement reqInv1: c_b needs p.x >= 3;   // No restriction.
requirement reqInv2: p.x = 1 disables c_c; // No restriction.
requirement reqInv3: c_d needs p.x >= 4;   // Disallow p.x = 3;

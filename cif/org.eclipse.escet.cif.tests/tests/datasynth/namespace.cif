controllable c;

plant p:
  uncontrollable u;
  controllable c2;

  location:
    initial;
    marked;

    edge c;
    edge u;
    edge c2;
end

group g:
  requirement r:
    disc int[0..3] x in any;
    disc int[0..3] y in any;

    location loc1:
      initial;
      marked;

      edge p.u do x := (x + 1) mod 4;
      edge c when x mod 2 = 1;
      edge p.c2 when y = 0 goto loc2;

    location loc2;
  end
end

controllable c;
uncontrollable u;

requirement invariant g.p.x > 2, g.p.x < 8;

group g:
  plant p:
    disc int[0..10] x in any;

    location l0:
      initial;
      marked;
      edge c do x := x + 1 goto l1;

    location l1:
      edge u do x := x - 1 goto l0;
  end

  requirement c needs p.x < 5;
  requirement u needs p.x > 3;
end

controllable e;

plant p:
  disc int[0..7] v = 0;

  location Initial:
    initial; marked;
    edge e;
end

requirement r:
  disc int[0..7] x = 7;

  location:
    initial; marked;
    edge e when p.v = ((x + 1) mod 8) * 2 do x := ((x + 1) mod 8) * 2;
end

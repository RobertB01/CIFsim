plant a:
  disc int[2..4] x;

  requirement invariant x = 0;
  requirement invariant x = 1;
  requirement invariant x = 2;
  requirement invariant x = 3;
  requirement invariant x = 4;
  requirement invariant x = 5;
  requirement invariant x = 6;

  requirement invariant x != 0;
  requirement invariant x != 1;
  requirement invariant x != 2;
  requirement invariant x != 3;
  requirement invariant x != 4;
  requirement invariant x != 5;
  requirement invariant x != 6;

  requirement invariant x < 0;
  requirement invariant x < 1;
  requirement invariant x < 2;
  requirement invariant x < 3;
  requirement invariant x < 4;
  requirement invariant x < 5;
  requirement invariant x < 6;

  requirement invariant x <= 0;
  requirement invariant x <= 1;
  requirement invariant x <= 2;
  requirement invariant x <= 3;
  requirement invariant x <= 4;
  requirement invariant x <= 5;
  requirement invariant x <= 6;

  requirement invariant x > 0;
  requirement invariant x > 1;
  requirement invariant x > 2;
  requirement invariant x > 3;
  requirement invariant x > 4;
  requirement invariant x > 5;
  requirement invariant x > 6;

  requirement invariant x >= 0;
  requirement invariant x >= 1;
  requirement invariant x >= 2;
  requirement invariant x >= 3;
  requirement invariant x >= 4;
  requirement invariant x >= 5;
  requirement invariant x >= 6;

  location:
    initial;
    marked;
end

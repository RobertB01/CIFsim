plant p:
  controllable inc;
  disc int[0..3] x;

  location:
    initial;
    marked;

    edge inc do x := x + 1;
end

plant q:
  controllable c_not_in_alphabet;

  location:
    initial;
    marked;

    requirement c_not_in_alphabet needs p.x > 0;    // Unsupported state/event exclusion: event not in alphabet.
end

group g2:
  requirement p.x = 2 disables q.c_not_in_alphabet; // Unsupported state/event exclusion: event not in alphabet.
end

requirement q.c_not_in_alphabet needs p.x < 3;      // Unsupported state/event exclusion: event not in alphabet.

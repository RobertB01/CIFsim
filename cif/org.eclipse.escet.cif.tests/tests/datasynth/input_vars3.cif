group io:
  input bool sensor;
  alg bool act = p_act.on;
end

uncontrollable u_on, u_off;

plant p_sensor:
  location off:
    initial not io.sensor;
    marked;
    edge u_on when io.sensor goto on;

  location on:
    initial io.sensor;
    edge u_off when not io.sensor goto off;
end

controllable c_on, c_off;

plant p_act:
  location off:
    initial;
    marked;
    edge c_on goto on;

  location on:
    edge c_off goto off;
end

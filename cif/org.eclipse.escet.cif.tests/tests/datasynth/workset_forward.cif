plant p1:
  controllable next;
  disc int[0..3] c = 0;

  location:
    initial;
    marked;
    edge next when c < 3 do c := c + 1;
end

plant p2:
  controllable e;
  disc bool b;

  location:
    initial;
    marked;
    edge e when p1.c = 1, not b do b := true;
end

plant adder:
  controllable c_add;
  uncontrollable u_remove;

  location l1:
    initial;
    marked;
    edge c_add goto l2;

  location l2:
    edge c_add goto l3;

  location l3:
    edge u_remove goto l1;
end

requirement count_max3:
  disc int[0..10] cnt = 0;

  requirement invariant cnt <= 3;

  location:
    initial;
    marked;
    edge adder.c_add    do cnt := cnt + 1;
    edge adder.u_remove do cnt := cnt - 1;
end

controllable c1, c2;
uncontrollable u1, u2;

plant def P(controllable c; uncontrollable u):
  disc int[0..3] x;

  location a:
    initial;
    marked;
    edge c goto b;

  location b:
    edge u when x < 2 do x := x + 1 goto a;
end

p1: P(c1, u1);
p2: P(c2, u2);

controllable a, b;

// chains g, h and v, w are the same.
automaton A:
    location p:
        initial;
        marked;
        edge a goto v;
        edge b goto g;

    location g:
        edge a goto h;

    location h:
        edge a goto p;

    location v:
        edge a goto w;

    location w:
        edge a goto p;
end

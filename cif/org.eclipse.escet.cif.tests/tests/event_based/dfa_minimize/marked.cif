controllable a, b;

automaton A:
    location p:
        initial;
        edge a goto m;
        edge b goto v;

    location m:
        marked;
        edge a goto p;
        edge b goto p;

    location v:
        marked;
        edge a goto m;
        edge b goto v;
end

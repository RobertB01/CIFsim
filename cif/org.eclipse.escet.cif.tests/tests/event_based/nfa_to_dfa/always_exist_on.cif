controllable powerup, shutdown;

automaton statespace:
  location loc1:
    initial;
    edge powerup goto loc2;
    edge powerup goto loc3;
  location loc2:
    edge shutdown goto loc4;
    edge shutdown goto loc1;
  location loc3:
    edge shutdown goto loc4;
    edge shutdown goto loc1;
  location loc4:
    edge powerup goto loc2;
    edge powerup goto loc3;
end

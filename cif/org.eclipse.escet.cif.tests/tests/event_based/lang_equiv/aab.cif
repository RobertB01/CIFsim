uncontrollable a, b;

// (aa*b)+
automaton X:
    location x1:
        initial;
        edge a goto x2;

    location x2:
        edge a;
        edge b goto x1;
end

// (ab)+
automaton Y:
    location y1:
        initial;
        edge a goto y2;

    location y2:
//        edge a;  // Removed
        edge b goto y1;
end

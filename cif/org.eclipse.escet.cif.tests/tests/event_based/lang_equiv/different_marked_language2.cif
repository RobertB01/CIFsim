event a, b, c;

automaton A:
  location L1:
    initial;
    marked;
    edge a goto L2;

  location L2:
    edge b goto L3;

  location L3:
    edge c goto L1;
end

automaton B:
  location L1:
    initial;
    marked;
    edge a goto L2;

  location L2:
    edge b goto L3;

  location L3:
    marked;
    edge c goto L1;
end

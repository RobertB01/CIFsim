controllable a;

plant p: // Has 2 unreachable locations.
  location x:
    initial;
    marked;
  location unreachable1:
    edge a goto unreachable2;
  location unreachable2:
    marked;
end

plant q: // Has a non-coreachable location.
  location x:
    initial;
    marked;
    edge a goto nonco;
  location nonco;
end

plant r: // Trim automaton.
  location x:
    initial;
    edge a goto y;
  location y:
    marked;
    edge a goto y;
end

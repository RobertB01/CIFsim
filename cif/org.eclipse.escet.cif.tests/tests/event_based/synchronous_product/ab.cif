controllable a, b, c, p, q;

automaton aa:
  location x0:
    initial;
    edge a goto x1;

  location x1:
    edge b goto x2;
    edge p goto x1;

  location x2:
    edge c goto x3;

  location x3:
    marked;
end

automaton bb:
  location y0:
    initial;
    edge p goto y1;

  location y1:
    edge q goto y3;

  location y3:
    marked;
    edge b goto y1;
end

controllable a;

plant A: // Marked after an even number of 'a' events.
  location s1:
    initial;
    marked;
    edge a goto s2;
  location s2:
    edge a goto s1;
end

supervisor B: // Marked after an odd number of 'a' events.
  location s1:
    initial;
    edge a goto s2;
  location s2:
    marked;
    edge a goto s3;
  location s3:
    edge a goto s2;
end

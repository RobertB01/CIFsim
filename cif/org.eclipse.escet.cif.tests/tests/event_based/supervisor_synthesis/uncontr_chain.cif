uncontrollable u, v;
controllable c, d, e;

plant p:
  location p1:
    initial;
    edge e goto p2;
    edge c goto p3;
    edge d goto p4;

  location p2:
    edge v goto p3;   // Uncontrollable edge leads to an unsafe location.

  location p3:
    edge u,c goto p4; // Requirement disables 'u'

  location p4:
    marked;
end

requirement r:
  alphabet u,v,c,d,e;
  location r1:
    initial;
    edge c, d, e goto r2;

  location r2:
    marked;
    edge c, v;
end

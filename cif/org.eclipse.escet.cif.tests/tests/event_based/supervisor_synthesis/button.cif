uncontrollable ButtonPush, ButtonRelease;
controllable   LedOff, LedOn;

plant p:
  location s0:
    marked;
    initial;
    edge ButtonPush goto s1;
    edge LedOn goto s2;

  location s1:
    edge ButtonRelease goto s0;
    edge LedOn goto s3;

  location s2:
    edge LedOff goto s0;
    edge ButtonPush goto s3;

  location s3:
    edge LedOff goto s1;
    edge ButtonRelease goto s2;
end

requirement r:
  location s0:
    marked;
    initial;
    edge ButtonPush goto s1;

  location s1:
    edge LedOff goto s2;
    edge LedOn goto s2;
    edge ButtonRelease goto s3;

  location s2:
    edge ButtonRelease goto s0;

  location s3:
    marked;
    edge ButtonPush goto s1;
end

uncontrollable p, q, r;
controllable x, y;

requirement R:
    location:
        initial;
        marked;
        edge p;
end

plant P1:
    location A:
        initial;
        marked;
        edge p goto B;
    location B:
        edge p goto A;
        edge y;
end

plant P2:
    location A:
        initial;
        marked;
        edge q goto B;
    location B:
        edge p goto A;
        edge x;
end

plant P3:
    location A:
        initial;
        marked;
        edge q goto B;
    location B:
        edge r goto A;
        edge x, y;
end

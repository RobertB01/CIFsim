controllable   c, d;
uncontrollable u;

plant p:
  location p1:
    initial;
    edge c goto p3;
    edge d goto p2;

  location p2:
    edge u goto p3; // Requirement 'r2' location has no "u" edge.

  location p3:
    marked;
end

requirement r:
  location r1:
    initial;
    edge c,d,u goto r2;

  location r2:
    marked;
end

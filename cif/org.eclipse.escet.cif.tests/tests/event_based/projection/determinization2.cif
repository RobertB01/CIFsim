controllable a, b, e;

plant P:
  location s0:
    initial;
    marked;
    edge a goto s1;
  location s1:
    edge b goto s0; // Non-deterministic choice for b
    edge b goto s1;
    edge e goto s2;
  location s2:
    edge e goto s3;
    edge a goto s0;
  location s3:
    edge b goto s0;
end

controllable t;
controllable c;
plant automaton abstracted:
  alphabet t, c;
  @state(G = "s0")
  location s1:
    initial;
    edge t goto s2;
  @state(G = "s1")
  @state(G = "s2")
  @state(G = "s3")
  location s2:
    edge c goto s3;
    edge c;
  @state(G = "s4")
  location s3:
    marked;
    edge c;
    edge c goto s2;
end

automaton a:
  disc int[-1..15] x;
  disc int[-1..15] y;

  location:
    initial;
    edge do x := if   x = 0, y = 0: 1
                 elif x = 1, y = 2: 2
                 elif x = 2, y = 3: 3
                 else -1
                 end,
            y := if x = 1: 3
                 else y + 2
                 end;
end

// 0 0
// 1 2
// 2 3
// 3 5
// -1 7
// -1 9
// -1 11
// -1 13
// -1 15
// Assignment out of bounds error.

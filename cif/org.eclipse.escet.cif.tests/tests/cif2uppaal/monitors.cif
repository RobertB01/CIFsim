event e;

automaton a:
  disc int[0..20] x;

  location:
    initial;
    edge e when x < 10 do x := x + 1;
end

automaton b:
  disc int[0..20] y;

  monitor e;

  location:
    initial;
    edge e when y < 5 do y := y + 1;
end

event e1;

automaton p:
  event e2;
  disc int[0..2] v;

  location loc1:
    edge e2 goto loc2;

  location loc2:
    initial;                      // Second location is initial.
    edge e1 do v := 1 goto loc1;
end

automaton r:
  location:
    initial;
    edge e1, p.e2;                // Two events on single edge.
end

automaton s:
  location:
    initial;
    edge e1;
end

requirement p.e2 needs p.v = 0;   // State/event exclusion invariant.

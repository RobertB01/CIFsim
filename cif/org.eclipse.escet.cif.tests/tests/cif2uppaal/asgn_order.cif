event e1, e2;

automaton a:
  disc int x = 1, y = 2;

  location:
    initial;
    edge e1 do x := y, y := x;
end

automaton b:
  disc int b = 1;

  location:
    initial;
    edge e2 do b := c.c;
end

automaton c:
  disc int c = 2;

  location:
    initial;
    edge e2 do c := b.b;
end

input bool b;

initial 1 = 1;

group g_trivial:
  initial 2 = 2;

  automaton a:
    initial 4 = 4;
    location:
      initial;
  end

  automaton def A():
    initial 4 = 4;
    location:
      initial 5 = 5;
  end

  group def G():
    initial 6 = 6;
  end
end

group g_nontrivial:
  initial b;

  automaton a:
    initial b;
    location:
      initial;
  end

  automaton def A():
    initial b;
    location:
      initial b;
  end

  group def G():
    initial b;
  end
end

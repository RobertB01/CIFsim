event e;

automaton a:
  location l1:
    initial;
    edge e goto l2; // Non-urgent.
  location l2:
    edge e now goto l3; // Urgent.
  location l3:
    edge e goto l4; // Non-urgent.
  location l4:
    edge e now goto l1; // Urgent.
end

group g:
  automaton def A():
    location l1:
      initial;
      edge e goto l2; // Non-urgent.
    location l2:
      edge e now goto l3; // Urgent.
    location l3:
      edge e goto l4; // Non-urgent.
    location l4:
      edge e now goto l1; // Urgent.
  end
end

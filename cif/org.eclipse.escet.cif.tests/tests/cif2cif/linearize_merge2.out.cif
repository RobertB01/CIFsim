enum E = l1, l2;
plant automaton M:
  alphabet p1_e;
  event p1_e;
  disc E p1 = l1;
  disc E p2 = l1;
  initial p1 = l1 and true or p1 = l2 and false,
          p2 = l1 and true or p2 = l2 and false;
  marked p1 = l1 and false or p1 = l2 and false,
         p2 = l1 and false or p2 = l2 and false;
  location L:
    initial;
    marked;
    edge p1_e when (p1 = l1 and true or p1 = l2 and false) and (p2 = l1 and true or p2 = l2 and false) do p1 := l2, p2 := l2;
end

type t = int[0..2];
const int RED = 0;
const int GREEN = 1;
const int BLUE = 2;
automaton p:
  disc int[0..1] v1 = UP;
  disc int[0..1] v2 = DOWN;
  const int UP = 0;
  const int DOWN = 1;
  invariant v2 = UP;
  location:
    initial;
end
automaton a:
  disc t x = BLUE;
  invariant x = BLUE;
  location:
    initial;
end
automaton q:
  disc int[0..1] d = DOWN;
  const int UP = 0;
  const int DOWN = 1;
  invariant d = UP;
  location:
    initial;
end
invariant RED = GREEN;
invariant RED = RED;
invariant p.v1 = p.UP;
invariant p.UP = q.UP and p.DOWN = q.DOWN;

plant buf:
  controllable c_add, c_remove;

  disc int[0..10] count = 5;
  marked count = 0;

  requirement invariant count >= 3;
  requirement invariant count <= 7;

  location:
    initial;
    marked;
    edge c_add    do count := count + 1;
    edge c_remove do count := count - 1;
end

controllable c_e1, c_e2;

plant p:
  alphabet c_e1, c_e2;          // Disables c_e2 globally.

  location loc1:
    initial;
    marked;
    edge c_e1 goto loc2;

  location loc2:
    edge c_e1 goto loc1;
end

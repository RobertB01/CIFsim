controllable c;

plant p:
  uncontrollable u;
  disc int[0..2] v;             // No marked.

  location loc1:
    initial;
    marked;
    edge c do v := 1 goto loc2;

  location loc2:
    edge u goto loc1;
end

requirement r:
  location:
    initial;                    // No marked.
    edge c, p.u;                // Two events on single edge.
end

supervisor s:
  location:
    initial;
    marked;
    edge c;
end

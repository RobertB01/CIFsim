type tt = tuple(int a; bool b; string c; real d);

const bool a = true;
const string b = "b";

automaton p:
  disc list int c;
  disc tt tv;

  alg int    pa = tv[a];
  alg bool   pb = tv[b];
  alg string pc = tv[c];
  alg real   pd = tv[d];

  invariant pa > 0 or pb or pc = "" or pd = 0.0;

  location:
    initial;
end

invariant a or b = "" or size(p.c) > 0;

const int i = 1;
group q:
  input tuple(real i; bool j; bool k) t;
  invariant t[i]     = 1.0;
  invariant t[.i]    = true;
  invariant t[i + 1] = true;
end

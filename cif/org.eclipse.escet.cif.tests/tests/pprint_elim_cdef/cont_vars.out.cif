cont r = 1.0 der 2.0;
cont a;
group x:
  group y:
    plant automaton def z():
      cont y = <real>i der r;
      disc int i;
      location:
        initial;
    end
  end
end
p: x.y.z();
group q1:
  cont a;
  equation a' = 1.0;
end
automaton q2:
  cont a = 8.0;
  cont cont_var;
  location l1:
    initial;
    equation a' = 1.0,
             cont_var' = 2.0;
  location l2:
    initial;
    equation a' = 3.0,
             cont_var' = 4.0;
end
group z1:
  cont x;
  cont y;
  invariant x + y > 0;
  equation x' = x,
           y' = x;
end
group z2:
  cont x = y;
  cont y = 0.0 der x;
  equation x' = 1.0;
end
invariant r + p.y > 0;
invariant a + q1.a + q2.a + q2.cont_var > 0;
invariant a' + q1.a' + q2.a' + q2.cont_var' > 0;
equation a' = 1.0;

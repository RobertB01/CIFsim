enum COLOR = RED, GREEN, BLUE;
const COLOR r = RED;
const COLOR g = GREEN;
enum E1 = L1;
enum E2 = L2;
automaton p:
  event e;
  disc COLOR c;
  disc E1 v1 = L1;
  disc E2 v2 = L2;
  location l:
    initial;
    edge e do c := r;
    edge e do c := RED;
end
automaton q:
  enum F1 = L1;
  disc F1 v1;
  invariant v1 = p.v1 or v1 != L1;
  location:
    initial;
end
invariant g = BLUE or p.v1 = L1 or p.v2 = L2;

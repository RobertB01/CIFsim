const int c1 = 5;
const int c2 = c1 + 1;

invariant c2 > 0;

plant p:
  location l:
    initial;
end

plant def D():
  location l:
    initial;
end

d1: D();
d2: D();

group def E(D d):
  invariant d.l;
  marked p.l;
end

e1: E(d1);
e2: E(d2);

type t = bool;

group def F():
  type t = int[2..2];

  automaton g:
    type t = int[3..3];

    disc t    v1 = 3;
    disc .t   v2 = 2;
    disc .g.t v3 = 3;
    disc ^t   v4 = true;

    invariant v2 + v3 > 0 and v4;
    location l:
      initial;
  end

  invariant g.l or g.v1 = 3;
  invariant d1.l;
end

f: F();

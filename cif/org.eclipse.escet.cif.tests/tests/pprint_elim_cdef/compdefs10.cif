plant def A():
  type t = real;
  location m:
    initial; marked;
end

group def B():
  a: A();
end

b: B();

requirement def C(B bp):
  disc bp.a.t X = 4.5;
  alg bp.a.t Y = 6.0;
  location:
    initial;
    edge when bp.a.m do X := Y;
    edge when bp.a.m;
end

c: C(b);

requirement def V(A a):
  alg a.t X = 4.5;
  alg a.t Y = 6.0;
  location:
    initial;
    edge when a.m;
    edge when a.m;
end

v: V(b.a);

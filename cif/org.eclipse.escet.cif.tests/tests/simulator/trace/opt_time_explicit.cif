event e, f, g, h;

automaton a:
  cont t der 1.0;

  location l1:
    initial;
    edge e do t := 0 goto l2;

  location l2:
    edge f goto l3;
    edge g goto l2b;

  location l2b:
    edge h when t >= 2 goto l3;

  location l3:
    edge f goto l4;

  location l4:
    edge e goto l1;
    edge e goto l2;
end

// Always enabled, environment event.
automaton a:
  event e;
  location:
    initial;
    edge e;
end

// Always enabled, non-environment event.
automaton b:
  event e;
  location:
    initial;
    edge e;
end

// Enabled once, non-environment event.
automaton c:
  location m1:
    initial;
    edge b.e goto m2;

  location m2;
end

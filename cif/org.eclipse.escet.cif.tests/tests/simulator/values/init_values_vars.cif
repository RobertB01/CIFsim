// Initial values of all types of variables.
automaton p:
  disc bool a1 = b1;                                    // true
  alg bool b1 = c1;                                     // true
  disc bool c1 = d' > 1.2;                              // true

  disc bool a2 = b2;                                    // false
  alg bool b2;                                          // false
  equation b2 = c2;
  disc bool c2 = d' > 1.3;                              // false

  const real d0c = 1.23;                                // 1.23
  disc real d0 = d0c;                                   // 1.23
  cont d = d0 der d;                                    // 1.23

  invariant a1 or a2;

  location:
    initial;
    urgent;
end

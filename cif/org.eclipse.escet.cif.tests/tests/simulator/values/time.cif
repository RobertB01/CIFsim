automaton p:
  disc real t = time + 1.23;

  location l1:
    initial;
    edge do t := time + 2.34 goto l2;

  location l2:
    edge when time >= 3.0 goto l3;

  location l3:
    edge do t := time + 0.123 goto l4;

  location l4:
    urgent;
end

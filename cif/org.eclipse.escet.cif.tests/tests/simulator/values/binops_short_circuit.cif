automaton p:
  disc bool b1, b2, b3;
  disc list bool li = [];

  location l1:
    initial;
    edge do b1 := true  or  li[0],   // true
            b2 := false and li[0],   // false
            b3 := false =>  li[0]    // true
    goto l2;

  location l2:
    urgent;
end

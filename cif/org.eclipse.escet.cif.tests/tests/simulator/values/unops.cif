// NOTE: 'sample' not included (distributions have separate tests).

automaton p:
  disc bool b;
  disc int i;
  disc real r;

  location l1:
    initial;

    edge do b := not true,                                   // false
            i := -1,                                         // -1
            r := -5.0                                        // -5.0
    goto l2;

  location l2:
    edge do b := not false,                                  // true
            i := --1,                                        // 1
            r := --5.0                                       // 5.0
    goto l3;

  location l3:
    edge do i := +1,                                         // 1
            r := +1.0                                        // 1.0
    goto l4;

  location l4:
    edge do r := -+--+1.2                                    // -1.2
    goto l5;

  location l5:
    urgent;
end

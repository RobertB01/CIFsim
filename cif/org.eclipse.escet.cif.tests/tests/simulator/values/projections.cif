const tuple(int a; bool b; real c) ctibr = (123, false, 234.0);

automaton p:
  disc bool b;
  disc int i1, i2, i3;
  disc string s1, s2, s3;
  disc real r;
  disc int z = 0;

  location l1:
    initial;

    edge do i1 := [1, 2, 3][0],                               // 1
            i2 := [1, 2, 3][1],                               // 2
            i3 := [1, 2, 3][2]                                // 3
    goto l2;

  location l2:
    edge do i1 := [1, 2, 3][-1],                              // 3
            i2 := [1, 2, 3][-2],                              // 2
            i3 := [1, 2, 3][-3]                               // 1
    goto l3;

  location l3:
    edge do i1 := [[1, 2], [3, 4, 5]][0][0],                  // 1
            i2 := [[1, 2], [3, 4, 5]][0][1],                  // 2
            i3 := [[1, 2], [3, 4, 5]][1][0]                   // 3
    goto l4;

  location l4:
    edge do i1 := [[1, 2], [3, 4, 5]][1][1],                  // 4
            i2 := [[1, 2], [3, 4, 5]][1][2]                   // 5
    goto l5;

  location l5:
    edge do i1 := {1: 2, 3: 4}[1],                            // 2
            i2 := {1: 2, 3: 4}[3]                             // 4
    goto l6;

  location l6:
    edge do s1 := "abc"[0],                                   // "a"
            s2 := "abc"[1],                                   // "b"
            s3 := "abc"[2]                                    // "c"
    goto l7;

  location l7:
    edge do s1 := "abc"[-1],                                  // "c"
            s2 := "abc"[-2],                                  // "b"
            s3 := "abc"[-3]                                   // "a"
    goto l8;

  location l8:
    edge do i1 := (9, true, "x")[0],                          // 9
            b  := (9, true, "x")[1],                          // true
            s1 := (9, true, "x")[2]                           // "x"
    goto l9;

  location l9:
    edge do i1 := ctibr[a],                                   // 123
            b  := ctibr[b],                                   // false
            r  := ctibr[c]                                    // 234.0
    goto l10;

  location l10:
    edge do i1 := <list[0] tuple(int a,b)>[][z][a] goto l11;  // err

  location l11:
    urgent;
end

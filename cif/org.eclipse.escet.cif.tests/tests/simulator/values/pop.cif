automaton p:
  disc list int xs = [1, 2, 3, 4];
  disc int cnt, x;

  location l1:
    initial;
    urgent;
    edge when not empty(xs) do (x, xs) := pop(xs) goto l2;

  location l2:
    edge do cnt := cnt + x goto l1;
end

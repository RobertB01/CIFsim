automaton p:
  event reset1, reset2;
  cont x1 = 0.0 der 1.0,
       x2 = 0.0 der 2.0;

  location:
    initial;
    edge reset1 when x1 >= 1.0 do x1 := 0.0;
    edge reset2 when x2 >= 1.0 do x2 := 0.0;
end

// reset1 every 1.0 time units, reset2 every 0.5 time units

automaton m:
  disc int x;
  cont V = 0.0 der 1.0;

  location l0:
    initial;
    edge when sin(V) > 0.9 do x := x + 1 goto l1;

  location l1:
    edge when sin(V) < 0.9 do x := x + 1 goto l0;
end

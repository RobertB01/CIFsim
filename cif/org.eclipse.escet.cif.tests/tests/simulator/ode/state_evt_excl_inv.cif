event e;

invariant e needs time > 2;
invariant time <= 5 disables e;

automaton a:
  disc bool x;

  invariant e needs time > 3;
  invariant time <= 6 disables e;

  location:
    initial;

    invariant e needs time > 4;
    invariant time <= 7 disables e;

    edge e when not x do x := true;
end

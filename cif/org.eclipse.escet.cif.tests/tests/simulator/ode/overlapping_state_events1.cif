automaton p:
  event reset1, reset2;
  cont t1 = 0.0 der 1.0,
       t2 = 0.0 der 1.0;

  location:
    initial;
    edge reset1 when t1 >= 1.0 do t1 := 0.0;
    edge reset2 when t2 >= 2.0 do t2 := 0.0;
end

// reset1 every time unit, reset2 every two time units

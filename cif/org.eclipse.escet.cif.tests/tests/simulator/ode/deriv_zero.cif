automaton p:
  cont x = 0.0;
  cont t = 0.0 der 1.0;

  location l0:
    initial;
    equation x' = 1.0;
    edge when x >= 1/5 do x := x goto l1;

  location l1:
    equation x' = 0.0;
    edge when t > 5 goto l2;

  location l2:
    equation x' = 1.23;
    urgent;
end

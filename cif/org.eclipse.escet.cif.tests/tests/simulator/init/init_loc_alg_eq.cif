// Initial value dependency via equation for algebraic variable.
alg bool x = A.x;
automaton A:
  alg bool x;
  location:
    initial;
    equation x = false;
end

automaton B:
  event e;
  disc int y = if x: 0 else 1 end;
  location l1:
    initial;
    edge e when y = 1 goto l2;
  location l2:
    urgent;
end

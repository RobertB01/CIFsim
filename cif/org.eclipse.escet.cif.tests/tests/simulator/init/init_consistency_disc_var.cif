automaton p:
  disc bool x in any;

  location:
    initial;
end

automaton q1:
  location l1:
    initial p.x;
    urgent;

  location l2:
    initial not p.x;
    urgent;
end

automaton q2:
  location l1:
    initial not p.x;
    urgent;

  location l2:
    initial p.x;
    urgent;
end

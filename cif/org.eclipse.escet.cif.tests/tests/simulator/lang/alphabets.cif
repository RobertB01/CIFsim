// 'Normal' automata.
event e1, e2, e3;

automaton p:
  alphabet e1, e1, e2, e3;

  location l1:
    initial;
    edge e1, e2 when true goto l2;

  location l2;
end

automaton q:
  location l1:
    initial;
    urgent;
    edge e1, e2, e3 when true;
end

// 'Simple' automata.
event f1, f2, f3;

automaton r:
  alphabet f1, f1, f2, f3;

  location l1:
    initial;
    edge f1, f2 goto l2;

  location l2;
end

automaton s:
  location l1:
    initial;
    urgent;
    edge f1, f2, f3;
end

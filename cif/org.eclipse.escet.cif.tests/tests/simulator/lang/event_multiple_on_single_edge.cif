// 'Normal' automaton.
automaton p:
  disc int x = 0;
  event e;

  location:
    initial;
    urgent;

    edge e, e     when x = 0 do x := x + 1;
    edge tau, tau when x = 1 do x := x + 1;
    edge tau, e   when x = 2 do x := x + 1;
    edge e,   tau when x = 3 do x := x + 1;
end

// 'Simple' automaton.
automaton q:
  event q1, q2;

  location l1:
    initial;
    edge q1, q1, q2 goto l2;

  location l2;
end

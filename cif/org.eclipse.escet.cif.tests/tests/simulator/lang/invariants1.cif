invariant p.y < 7;

automaton p:
  event ex, ey, ez;
  disc int x = 0, y = 5, z = 9;
  invariant x < 3;

  location:
    initial;
    invariant z < 11;
    urgent;

    edge ex do x := x + 1;
    edge ey do y := y + 1;
    edge ez do z := z + 1;
end

// Note that the constants are ordered on their dependencies.

const bool cb = ci > 0;             // true
const int ci = 1;

automaton p:
  disc int v;                       // 0
  location:
    initial;
    urgent;
    edge when cb, v = 0 do v := v + ci;  // done once, v becomes 1
end

automaton p:
  // 'Normal' automaton.
  disc int x = 0;
  event e;

  location:
    initial;
    urgent;
    edge e when x < 2 do x := x + 1;
end

automaton q:
  // 'Normal' automaton.
  disc int x = 0;
  event e;

  location:
    initial;
    urgent;
    edge e when x < 2 do x := x + 1;
end

automaton r:
  // 'Simple' automaton.
  event e;

  location l1:
    initial;
    edge e goto l2;

  location l2;
end

automaton s:
  location:
    initial;
    urgent;
end

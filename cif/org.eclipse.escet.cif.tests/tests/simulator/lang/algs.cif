alg int a0 = a1;                         // 1

alg int a1 = 1;

alg int a2;
equation a2 = p.v1 + a1;                 // p.v1 + 1

automaton p:
  disc int v1 = a0 + 1;                  // 2

  location:
    initial;
    urgent;

    edge when a2 > 0 do v1 := v1 - 1;    // 3 times, v1 becomes: 1, 0, -1
end

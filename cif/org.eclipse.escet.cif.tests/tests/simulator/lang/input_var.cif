invariant g.i_b;
invariant i_r > 0.0;
invariant if i_r > 0.0: true else false end;

input real i_r;

automaton g:
  event e;

  input bool i_b;
  input int i_i;

  location l1:
    initial;
    edge e when i_b goto l2;
  location l2:
    edge e when i_i > 2 goto l3;
  location l3:
    edge e when i_r < 3.0 goto l4;
  location l4:
    urgent;
end

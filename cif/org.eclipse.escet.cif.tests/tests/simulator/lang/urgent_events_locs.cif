// All events are urgent. If event enabled, no time passage.
automaton p:
  disc bool b = true;
  event e;

  location:
    initial;
    edge e when b do b := not b;
end

// Urgent locations. No time passage after 5 time units.
automaton q:
  location l1:
    initial;
    edge when time > 5.0 goto l2;

  location l2:
    urgent;
end

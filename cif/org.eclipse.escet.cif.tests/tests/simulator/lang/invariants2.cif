event e1, e2;

automaton p:
  disc int x = 0;

  location l1:
    initial;
    invariant x < 2;

    edge e1 do x := x + 1;
    edge e2 goto l2;

  location l2:
    urgent;
    invariant x < 4;

    edge do x := x + 1;
end

event int e;

automaton s:
  disc int x = 2;

  location:
    initial;
    edge e!x do x := x * 2;
end

automaton r:
  disc int y;

  location:
    initial;
    edge e? do y := y + ?;
end

supervisor sup:
  disc int cnt = 0;

  location:
    initial;
    urgent;
    edge e when cnt < 3 do cnt := cnt + 1;
end

// 'Normal' automata.
event e;

automaton p:
  disc int x = 0;

  location:
    initial;
    urgent;
    edge e when x < 2 do x := x + 1;
end

automaton q:
  disc int x = 0;

  location:
    initial;
    urgent;
    edge e when x < 4 do x := x + 1;
end

// 'Simple' automata.
event f;

automaton r:
  location l1:
    initial;
    edge f goto l2;

  location l2;
end

automaton s:
  location l1:
    initial;
    edge f goto l2;

  location l2:
    edge f goto l3;

  location l3;
end

// No delay.
automaton t:
  location:
    initial;
    urgent;
end

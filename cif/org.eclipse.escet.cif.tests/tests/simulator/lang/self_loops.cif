// 'Normal' automaton.
automaton p:
  event e1, e2;
  disc int x;

  location l1:
    initial;
    urgent;
    edge e1 when x < 3 do x := x + 1;
    edge e2 when x < 4 do x := x + 1 goto l1;
end

// 'Simple' automaton.
event f1;

automaton q:
  location l1:
    initial;
    edge f1;
end

automaton r:
  disc int x = 0;

  location:
    initial;
    edge f1 when x < 4 do x := x + 2;
    edge f1 when x < 6 do x := x + 1;
end

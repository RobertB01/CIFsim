event e;
event void ev1;
event void ev2;
event int ei1;
event int ei2;

automaton as:
  location l1:
    initial;
    urgent;
    edge ev1!, ev2!, ei1!1, ei2!2, e;
end

automaton ae:
  location l1:
    initial;
    edge e goto l2;

  location l2;
end

automaton arv1:
  location l1:
    initial;
    edge ev1? goto l2;

  location l2;
end

automaton arv2:
  location l1:
    initial;
    edge ev2? goto l2;

  location l2;
end

automaton ari1:
  disc int x;

  location l1:
    initial;
    edge ei1? do x := ? goto l2;

  location l2;
end

automaton ari2:
  disc int x;

  location l1:
    initial;
    edge ei2? do x := ? goto l2;

  location l2;
end

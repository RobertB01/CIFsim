event e, f;

// 'Normal' automata.
automaton p1:
  location:                 // Nameless single location
    initial;
    edge e when false;
end

automaton q1:
  location l:               // Named single location
    initial;
    edge e when false;
end

automaton r1:
  location l1:              // Named multiple locations.
    initial;
    edge tau goto l2;

  location l2:              // Named multiple locations.
    urgent;
end

// 'Simple' automata.
automaton p2:
  location:                 // Nameless single location
    initial;
end

automaton q2:
  location l:               // Named single location
    initial;
end

automaton r2:
  location l1:              // Named multiple locations.
    initial;
    edge f goto l2;

  location l2:              // Named multiple locations.
    urgent;
end

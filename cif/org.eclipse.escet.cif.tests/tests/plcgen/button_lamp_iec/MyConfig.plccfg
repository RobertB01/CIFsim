CONFIGURATION MyConfig
    VAR_GLOBAL // STATE
        hw_button_bit: BOOL;
        hw_lamp_bit: BOOL;
    END_VAR
    VAR_GLOBAL // TIMERS
        firstRun: BOOL := TRUE;
        timer0: TON;
        timer1: TON;
        curTimer: INT := 0;
    END_VAR
    TASK MyTask(INTERVAL := t#7ms, PRIORITY := 123);
    PROGRAM MAIN WITH MyTask: MAIN;
END_CONFIGURATION

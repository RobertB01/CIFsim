CONFIGURATION MyConfig
    VAR_GLOBAL // INPUTS
        in_hw_button_bit AT %I15.5: BOOL;
    END_VAR
    VAR_GLOBAL // OUTPUTS
        out_hw_lamp_bit AT %Q16.6: BOOL;
    END_VAR
    VAR_GLOBAL // STATE
        timer_t: LREAL;
        timer: timer_location;
        sup: sup_location;
        hw_button_bit: BOOL;
        hw_button: hw_button_location;
        hw_lamp_bit: BOOL;
        hw_lamp: hw_lamp_location;
    END_VAR
    VAR_GLOBAL // TIMERS
        ton__timer_t__1: TON;
        preset__timer_t__1: TIME;
        firstRun: BOOL := TRUE;
    END_VAR
    TASK MyTask(INTERVAL := t#7ms, PRIORITY := 123);
    PROGRAM MAIN WITH MyTask: MAIN;
END_CONFIGURATION

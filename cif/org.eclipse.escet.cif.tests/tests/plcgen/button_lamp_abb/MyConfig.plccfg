CONFIGURATION MyConfig
    VAR_GLOBAL // INPUTS
        in_hw_button_bit AT %I15.5: BOOL;
    END_VAR
    VAR_GLOBAL // OUTPUTS
        out_hw_lamp_bit AT %Q16.6: BOOL;
    END_VAR
    VAR_GLOBAL // STATE
        timer: DINT;
        sup: DINT;
        hw_button_bit: BOOL;
        hw_button: DINT;
        hw_lamp_bit: BOOL;
        hw_lamp: DINT;
    END_VAR
    VAR_GLOBAL // TIMERS
        firstRun: BOOL := TRUE;
        timer0: TON;
        timer1: TON;
        curTimer: INT := 0;
    END_VAR
    TASK MyTask(INTERVAL := t#7ms, PRIORITY := 123);
    PROGRAM MAIN WITH MyTask: MAIN;
END_CONFIGURATION

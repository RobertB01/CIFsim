plant A:
  uncontrollable u;
  disc bool dv = false;
  location l1:
    initial;marked;
    edge u do dv := true;
end

plant B:
  alg bool var1 = A.dv;
  controllable c;
  location:
    initial; marked;
    edge c;
end

plant C:
  controllable c;
  location:
    initial; marked;
    edge c;
end

requirement C.c needs B.var1;

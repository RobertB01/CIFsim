plant Actuator:
  controllable c_on, c_off;
  location Off:
    initial;
    edge c_on goto On;
  location On:
    edge c_off goto Off;
end

plant Sensor:
  uncontrollable u_on, u_off;
  location Off:
    initial;
    edge u_on goto On;
  location On:
    edge u_off goto Off;
end

requirement Actuator.c_on  needs Sensor.On;
requirement Actuator.c_off needs Sensor.Off;

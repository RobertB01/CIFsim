plant X:
  controllable a, b, c;
  location A:
    initial;
    edge a goto B;
  location B:
    edge b goto C;
  location C:
    edge c goto A;
end

input int[0..2] Y;

requirement X.a needs Y = 0 or Y = 2;
requirement X.b needs Y = 0 or Y = 1;
requirement X.c needs Y = 1 or Y = 2;

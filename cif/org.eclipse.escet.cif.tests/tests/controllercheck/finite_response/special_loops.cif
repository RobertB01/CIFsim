// Shifted loops should be considered the same.
automaton A:
  controllable a, b;
  location l0:
    initial;
    edge a goto l1;
    edge b goto l3;
  location l1: // Loop a-b.
    edge a goto l2;
  location l2:
    edge b goto l1;
  location l3: // Loop b-a.
    edge b goto l4;
  location l4:
    edge a goto l3;
end

// Same event in a loop should be printed twice.
automaton B:
  controllable a;
  location l0: // Loop a-a.
    initial;
    edge a goto l1;
  location l1:
    edge a goto l0;
end

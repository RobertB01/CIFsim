@@controller:properties(boundedResponse: true, uncontrollablesBound: 0, controllablesBound: 0, confluence: true, finiteResponse: true)

controllable c, a, b;
uncontrollable u;

plant automaton p:
  disc bool v;

  location loc1:
    initial;
    edge c, u;
    edge a do v :=     v goto loc2;
    edge b do v := not v goto loc2;

  location loc2:
    marked;
end

controllable a, b, c;

automaton A:
  location p:
    initial;
    edge a goto q;
  location q:
    marked;
end

automaton B:
  disc int[0..2] v;

  location p:
    initial;
    edge b when A.p and v = 0 do v := v + 2 goto q;
    marked;
  location q:
    edge c when A.q do v := v - 2 goto p;
end

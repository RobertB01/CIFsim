automaton AutDifferenLocs:
  controllable a, b;
  disc bool z;
  disc int[0..2] v;

  location p:
    initial;
    edge a do z := true goto q;
    edge b do v := 2 goto r;
  location q:
    edge b do v := 2 goto s;
  location r:
    edge a do z := true goto s;
  location s:
    marked;
end

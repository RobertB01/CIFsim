@@controller:properties(boundedResponse: true, uncontrollablesBound: 0, controllablesBound: 3, confluence: true, finiteResponse: true)
controllable a;
controllable b;
controllable c;
plant automaton A:
  location p:
    initial;
    edge a goto q;
  location q:
    marked;
end
plant automaton B:
  disc int[0..2] v;
  location p:
    initial;
    marked;
    edge b when A.p and v = 0 do v := v + 2 goto q;
  location q:
    edge c when A.q do v := v - 2 goto p;
end

automaton A:
  event a, b, c;
  disc int[0..2] x, y;

  location AS0:
    initial;
    edge a do x:=0, y:=0 goto AS1;

  location AS1:
    edge b when x < 2 do x:= x + 1  goto AS1;
    edge c when x = 2 do x:= 0      goto AS0;
end

automaton B:

  location BS0:
    initial;
    edge A.c when A.x = 2 and A.y = 0;
end

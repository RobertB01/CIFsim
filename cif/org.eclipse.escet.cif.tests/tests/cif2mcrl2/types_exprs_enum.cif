enum E = L1, L2, L3;

const E t = L1;
alg E a = t;

automaton aut:
  disc E v = L1;

  event e1, e2, e3;

  location:
    initial;

    // Discrete variable and literals.
    edge e1 when v = L3;

    // Constant and algebraic variable.
    edge e2 when v = t;
    edge e3 when v = a;
end

enum E = A, B;
enum F = C, D, G;

group g:
  enum E = A, B;
end

group h:
  enum E = B, A;
end

automaton aut:
  controllable e1, e2;
  disc E x1 = A;
  disc g.E x2 = A;
  disc F y = C;
  disc h.E z = h.B;

  location l1:
    initial;
    edge e1 do x1 := x2 goto l2;

  location l2:
    edge e1 goto l3;
    edge e2 when x1 = x2;

  location l3:
    edge e1 when x1 != B goto l4;

  location l4:
    edge e1 do y := C goto l5;

  location l5:
    edge e1 when y = C goto l6;

  location l6:
    edge e1 do z := h.B goto l7;

  location l7:
    edge e1 when z != h.A goto l1;
end

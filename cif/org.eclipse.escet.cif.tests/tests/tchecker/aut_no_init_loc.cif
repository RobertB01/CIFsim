automaton p1:
  location;
end

automaton p2:
  location l1;
  location l2;
  location l3;
end

automaton p3:
  disc bool v; // initial value is 'false', but discrete variables are not
               // taken into account, to avoid evaluating cycles
  location l1:
    initial v;
end

const bool f = false;
const bool t = true;

automaton p4:
  location:
    initial f;
end

automaton p5:
  location:
    initial t;
end

group a:
  automaton def B():
    location;
  end
end

automaton p6:
  location:
    initial <string>p7 = "x";
end

automaton p7:
  location:
    initial;
end

event e;

automaton p8:
  location l1:
    initial l2;
    edge e goto l2;
  location l2;
end

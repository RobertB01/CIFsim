const int c = 1;

automaton a:
  alg int v = 5;

  location l1:
    initial;
  location l2:
    initial;
end

alg int c1 = switch a: case v: 1 else 2 end;
alg int c2 = switch a: case c: 1 else 2 end;

automaton def B(location l):
  alg int x = switch b1: case l: 1 else 2 end;

  location:
    initial;
end

b1: B(a.l1);

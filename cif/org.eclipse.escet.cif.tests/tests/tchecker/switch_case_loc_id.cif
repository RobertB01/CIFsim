automaton a:
  location l1:
    initial;
  location l2:
    initial;
end

alg int c1 = switch a: case 1:    2 else 3 end;
alg int c2 = switch a: case l1':  2 else 3 end;
alg int c3 = switch a: case a.l1: 2 else 3 end;
alg int c4 = switch a: case l1:   2 else 3 end;

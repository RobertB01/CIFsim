// Error: not exactly one argument.
@cif:typechecker:tests:anno1
input bool i1;

@cif:typechecker:tests:anno1(arg1 = true, arg2 = false)
input bool i2;

// Also check other types of annotated objects.

automaton a1:
  @cif:typechecker:tests:anno1
  location:
    initial;
end

automaton a2:
  @cif:typechecker:tests:anno1
  location loc1:
    initial;

  @cif:typechecker:tests:anno1
  location loc2:
    initial;
end

automaton a3:
  @cif:typechecker:tests:anno1
  disc int x = 1;
  invariant x > 0;

  @cif:typechecker:tests:anno1
  cont c = 1 der 2;
  invariant c > 0;

  @cif:typechecker:tests:anno1
  event evt;

  location:
    initial;
    edge evt;
end

group g1:
  @cif:typechecker:tests:anno1
  alg int alg1 = a3.x;

  @cif:typechecker:tests:anno1
  const int const1 = 2;
end

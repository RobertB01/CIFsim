// Test for bug 'Assignments to function typed variables may lead to range violations'.

func int[1..2] g():
  return 1;
end

automaton a:
  disc func int[2..3] () f;
  disc int[2..7] x = 5;

  location l0:
    initial;
    edge do f := g goto l1;

  location l1:
    edge do x := f() goto l2;

  location l2:
    urgent;
end

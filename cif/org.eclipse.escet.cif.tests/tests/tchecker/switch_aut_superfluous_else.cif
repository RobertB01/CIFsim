automaton a:
  alg int c1 = switch self:
                 case l1: 1
                 case l2: 2
                 else     3
               end;

  location l1:
    initial;
  location l2:
    initial;
end

automaton b:
  location:
    initial;
end

alg real c1 = switch b: else 1.0 end;

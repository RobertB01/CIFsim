// Different kinds of invariants, and warning reporting position.
group ggg:
  plant automaton p:
    event e;

    invariant true;
    invariant e needs true;
    invariant true disables e;
    invariant {e, e} needs true;
    invariant true disables {e, e};

    location:
      initial;
      edge e;
  end
end

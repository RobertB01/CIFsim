// In specification.
            invariant true;
plant       invariant true;
requirement invariant true;
supervisor  invariant true;

// In group (definition).
group g:
              invariant true;
  plant       invariant true;
  requirement invariant true;
  supervisor  invariant true;
end

group def G():
              invariant true;
  plant       invariant true;
  requirement invariant true;
  supervisor  invariant true;
end

// In automaton (definition).
group gg:
  automaton a:
                invariant true;
    plant       invariant true;
    requirement invariant true;
    supervisor  invariant true;

    location:
      initial;
  end

  plant p:
                invariant true;
    plant       invariant true;
    requirement invariant true;
    supervisor  invariant true;

    location:
      initial;
  end

  plant automaton pp:
                invariant true;
    plant       invariant true;
    requirement invariant true;

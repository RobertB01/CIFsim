enum E = A, B;

automaton aut:
  disc bool                       v1 in any;
  disc int[0..1]                  v2 in any;
  disc E                          v3 in any;

  initial v1 or not v1;
  initial v2 >= 0;
  initial v3 = A or v3 = B;

  location l1:
    initial;
    edge tau goto l2;

  location l2:
    initial;
    edge tau goto l1;
end

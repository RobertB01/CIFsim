input bool i1;

@doc($text = "single line doc")
input bool i2;

@doc($text = "doc with multiple\nlines " + "of\n text")
input bool i3;

@doc($text = fmt("%s", "some doc"))
input bool i4;

@doc($text = "First doc.")
@doc($text = "Second doc.")
input bool i5;

automaton a:
    disc bool i1;

    @doc($text = "single line doc")
    disc bool i2;

    @doc($text = "doc with multiple\nlines " + "of\n text")
    disc bool i3;

    @doc($text = fmt("%s", "some doc"))
    disc bool i4;

    @doc($text = "First doc.")
    @doc($text = "Second doc.")
    disc bool i5;

  location:
    initial;
    edge when i1 or i2 or i3 or i4 or i5;
end

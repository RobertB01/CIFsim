input bool inp0;
invariant inp0 or true;

type t1 = bool;
input t1 inp1;
invariant inp1 or true;

group p2:
  input t1 inp2;
  plant invariant inp2 or true;
end

requirement p3:
  input t1 inp3;
  requirement invariant inp3 or true;
  location:
    initial inp3;
end

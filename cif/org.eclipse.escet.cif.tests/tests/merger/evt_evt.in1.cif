event int e1;
event e2;
event void e3;

plant p1:
  location:
    initial;
    edge e1!1;
    edge e2;
    edge e3?;
end

plant q1:
  disc int x;
  location:
    initial;
    edge e1? do x := ?;
end

group annos:
  @cif:typechecker:tests:anno1(arg: true)
  @cif:typechecker:tests:anno3
  event e;

  invariant e needs true;
end


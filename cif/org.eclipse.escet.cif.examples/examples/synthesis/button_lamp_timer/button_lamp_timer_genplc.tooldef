from "lib:cif" import *;

// Create directory for generated files.
mkdir("generated_files", force=true);

// Synthesize supervisor.
cifsupsynth("button_lamp_timer_plants_reqs.cif",
             "-o generated_files/button_lamp_timer_sup.cif");

// Merge supervisor with hardware mappings and software timer plant.
cifmerge("generated_files/button_lamp_timer_sup.cif",
          "button_lamp_timer_hw.cif",
          "-o generated_files/button_lamp_timer_merged_hw.cif");

// Generate PLC code.
cif2plc("generated_files/button_lamp_timer_merged_hw.cif",
        "-o generated_files/button_lamp_timer.plcopen.xml");

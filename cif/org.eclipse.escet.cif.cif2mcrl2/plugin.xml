<plugin>
   <extension point="org.eclipse.ui.commands">
      <category
         id="org.eclipse.escet.cif.commands.category"
         name="CIF commands">
      </category>
      <command
         categoryId="org.eclipse.escet.cif.commands.category"
         defaultHandler="org.eclipse.escet.cif.cif2mcrl2.Cif2Mcrl2CommandHandler"
         id="org.eclipse.escet.cif.cif2mcrl2.CifToMcrl2Command"
         name="Convert CIF to mCRL2">
      </command>
   </extension>
   <extension point="org.eclipse.core.expressions.definitions">
      <definition id="org.eclipse.escet.cif.cif2mcrl2.singleFile">
         <and>
            <iterate>
               <adapt type="org.eclipse.core.resources.IFile">
                  <test property="org.eclipse.core.resources.name"
                        value="*.cif"/>
               </adapt>
            </iterate>
            <count value="1"/>
         </and>
      </definition>
   </extension>
   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               icon="icons/cif_to_mcrl2.png"
               id="org.eclipse.escet.cif.menu.verification"
               label="CIF verific&amp;ation tools">
            <command
                  commandId="org.eclipse.escet.cif.cif2mcrl2.CifToMcrl2Command"
                  icon="icons/cif_to_mcrl2.png"
                  label="Convert CIF to &amp;mCRL2...">
               <visibleWhen>
                  <or>
                     <with variable="activeMenuSelection">
                        <reference definitionId="org.eclipse.escet.cif.cif2mcrl2.singleFile"/>
                     </with>
                     <with variable="activeMenuEditorInput">
                        <reference definitionId="org.eclipse.escet.cif.cif2mcrl2.singleFile"/>
                     </with>
                  </or>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>